<h1>Burgers!</h1>

<h2>Burgers App</h2>

<ul>
  {{#each burgers}}
  <li> {{burger}} </li>
  <li> {{devoured}}</li>
  {{/each}}
</ul>



<div class="Container">
  <div class="row">
    <div class="cole-xs-12 text-center" id="top_bar">
      <h1> EAT DA BURGER</h1>
    </div>
    <div class="col-xs-6 text-center" class="task">
      <div class="row">
        {{#each burgers}} {{#unless this.devoured}}
        <div class="col-xs-6 text-center">
          <pre>{{this.id}}. {{this.burger}} </pre>
        </div>
        <div class="col-xs-3 text-center">
          <form method="POST" action="burgers/update?_method=PUT" class="button-size">
            <input type="hidden" name="burger_id" type="text" value={{this.id}}>
            <button type="submit" class="btn btn-default">DEVOUR IT!</button>
             <br>
          </form>
        </div>
        {{/unless}} {{/each}}
      </div>
      <br>
      <div class="col-xs-6 text-center" class="task">
        {{#each burgers}} {{#if this.devoured}}
        <input class="form-Control" type="text" placeholder="{{this.id}}.{{this.burger}}" readonly> {{/if}} {{/each}}
      </div>
    </div>
  </div>
<br>
  <div class="container">
    <div class="row">
      <div class="col-xs-12 text-center enter_section">
        <form action="/burgers/create" method="POST">
          <input type="text" name="burger" class="form-control" value="" id="enter_text">
          <button type="submit" class="btnbtn-primary" id="text-enter-button">SUBMIT</button>
        </form>
        <p> Enter in a burger you would like to eat</p>
      </div>


    </div>


  </div>



</div>